<%- contentFor('style') %>
    <style>
        h3 {
            color: green;
        }
    </style>

    <%- contentFor('body') %>
        <div class="container pt-3">
            <h3>
                <%= pageTitle %>
            </h3>
            <hr>

            <a href="/product-list/create-product" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>
                Create Product
            </a>
            <div class="row">
                <% for (const product of products) {%>
                    <div class="col-md-3 my-2">
                        <div class="card" style="width: 18rem;">
                            <img src="<%= product.image %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= product.name %>
                                </h5>
                                <p class="card-text">$<%= product.price %>
                                </p>
                                <form action="/product-list/add-to-cart" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="<%= product._id %>">
                                    <button class="btn btn-primary">
                                        Add to card <i class="fa-solid fa-cart-plus"></i>
                                    </button>
                                </form>
                                <a href="/product-list/<%= product._id %>/edit-product" class="btn btn-info">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <form action="/product-list/delete-product" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="<%= product._id %>">
                                    <button class="btn btn-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>

                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>

        <%- contentFor('script') %>